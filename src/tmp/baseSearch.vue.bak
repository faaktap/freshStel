<template>
   <!-- prepend-icon="mdi-magnify" -->
   <v-text-field class="pt-2 xmt-2"
                 single-line hide-details
                 append-icon="mdi-close"
                 placeholder="search"
                :value="value"
                @input="updateValue"
                @click:append="$emit('clear')"
   />
</template>

<script>
export default {
  name: "baseSearch", 
 props: {
      value: {
        type: String,
        default: ''
      }
    },
  methods: {
      updateValue: function (event) {
        this.$emit('input', event)
      }
  }
}
</script>
